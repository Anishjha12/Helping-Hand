<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginFirst">

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.8"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please enter your mobile number to proceed"
        android:textAlignment="center"
        android:textSize="19sp"
        android:textColor="#000000"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"/>

    <TextView
        android:id="@+id/loginerror"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:textSize="11.5sp"
        android:textColor="@color/red"
        android:visibility="invisible"
        android:text="Enter a valid phone number !"
        android:layout_height="wrap_content" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"/>

    <EditText
        android:id="@+id/LoginFirstPhoneNo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/edittext1"
        android:layout_weight="0.95"
        android:paddingLeft="20dp"
        android:textCursorDrawable="@drawable/cursor_black"
        android:minHeight="45dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:inputType="phone"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:hint="+91  Phone Number"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"/>

    <Button
        android:id="@+id/LoginFirstVarify"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:onClick="verify"
        android:textAllCaps="false"
        android:textCursorDrawable="@drawable/cursor_black"
        android:textSize="13sp"
        android:background="@drawable/button1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Verify" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5"/>

</LinearLayout>